<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RoboTech</title>
    <link rel="stylesheet" type="text/css" href="styles/main.css">
    <link rel="stylesheet" type="text/css" href="styles/modal.css">
    <link rel="stylesheet" type="text/css" href="styles/header.css">
    <link rel="icon" type="image/x-icon" href="img/icono.ico">
</head>
<body>
    <%- include('./partials/header') %>
    
    <main>
        <div class="div-left-info">left</div>
        
        
        
        <div class="div-main">

            <div class="div-nav">
                <input type="text" id="search-inp" placeholder="Buscar...">
                <div class="div-search-btn">
                    <button id="search-btn"><img src="img/lupa.png"></button>
                </div>
            </div>

            <div class="div-products">

                <% products.forEach(product => { %>
                    <div class="products inactive">
                        <div class="card" id="<%= product.name %>">
                            <a href="/robot">
                                <div class="side front">
                                    <img width="300px" height="250px" src="<%= product.imgUrl %>">
                                    <h2><%= product.name %></h2>
                                    <p><%= product.description %></p>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
                
        </div>

            <div class="div-rigth-info">Right</div>
        </main>
        
        <footer>
            <p>&copy; 2023 CarlosV IzanSan Angel Predro. Todos los derechos reservados.</p>
        </footer>
        <script src="../script/main.js" type="module"></script>
</body>
</html>